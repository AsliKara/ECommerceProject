@model ECommerceProject.UI.Web.Areas.Admin.Models.CategoryVM

<div class="col-lg-12">


    <div class="panel panel-default">

        @using (Html.BeginForm())
        {

            <div class="form-group">

                @Html.LabelFor(x=>x.Name)<br />
                @Html.ValidationMessageFor(x => x.Name)
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Enter category name" })


            </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.Description)
                        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @placeholder = "Enter description" })


                    </div>


                                <button type="submit" class="btn btn-default">Insert</button>

        }
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-6">

                </div>
                <!-- /.col-lg-6 (nested) -->
                <!-- /.col-lg-6 (nested) -->
            </div>
            <!-- /.row (nested) -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>

